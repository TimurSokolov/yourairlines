<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="Andrei_Shamshurin" id="create-plane-table">
        <createTable tableName="plane">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="version" type="BIGINT"/>

            <column name="sideNumber" type="varchar(256)">
                <constraints nullable="false"/>
            </column>

            <column name="brand" type="varchar(256)">
                <constraints nullable="false"/>
            </column>

            <column name="model" type="varchar(256)">
                <constraints nullable="false"/>
            </column>

            <column name="maxFlightRange" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="maxNumberOfPeople" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="fuelConsumption" type="BIGINT">
                <constraints nullable="false"/>
            </column>


        </createTable>
    </changeSet>
</databaseChangeLog>
